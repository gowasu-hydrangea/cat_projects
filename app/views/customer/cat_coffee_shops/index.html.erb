<div class='container px-5 px-sm-0'>
    <div class='row'>
        <div class='col-md-3'>
            <!--エラーメッセージ・部分テンプレート呼び出し-->
            
            <%#= render 'customers/info', customer: @customer %>
            <table class='table'>
                <tr>
                    <%= image_tag @customer.get_profile_image, size:'100x100' %>
                </tr>
                
                <tr>
                    <% unless current_customer == @customer %>
                    <% if current_customer.following?(@customer) %>
                      <%= link_to "フォロー外す", customer_customer_relationships_path(@customer.id), class: "btn btn-outline-primary btn-sm center-block", method: :delete %>
                    <% else %>
                      <%= link_to "フォローする", customer_customer_relationships_path(@customer.id), class: "btn btnprimary btn-sm center-block", method: :post %>
                    <% end %>
                    <% end %>
                </tr>
                
                <tr>
                    <th><%= @customer.customer_name %></th>
                </tr>
                
                <tr>
                    <th><%= @customer.status_message %></th>
                </tr>
                
                <tr>
                    <th>フォロー数</th>
                    <th><%= link_to @customer.followings.count, customer_customer_followings_path(@customer.id) %></th>
                </tr>
                
                <tr>
                    <th>フォロワー数</th>
                    <th><%= link_to @customer.followers.count, customer_customer_followers_path(@customer.id) %></th>
                </tr>
                
            </table>
            
            
            <div class= 'row'>
                
            </div>
            
            
            <div class='row'>
                <%= link_to edit_customer_customer_path(@customer.id), class: "btn btn-outline-secondary btn-block" do %>
                  プロフィールを編集する
                  <% end %>
            </div>
            
            
            <div class="mt-3">
                <%= link_to new_customer_cat_coffee_shop_path, class: "btn btn-warning btn-lg center-block mt-2 mb-2" do %>
                保護猫カフェ情報を共有する！
                <% end %>
                
                <!--<%#= link_to new_customers_lost_cat_path, class: "btn btn-warning btn-lg center-block mt-2 mb-2" do %>-->
                <!--もしあなたの猫ちゃんが脱走したら-->
                <!--<%# end %>-->
            </div>
            
        </div>
        
        <div class='col-md-8 offset-md-1'>
            <h2>保護猫カフェ情報特集！</h2>
            <%= render 'index', {cat_coffee_shops: @cat_coffee_shops} %>
