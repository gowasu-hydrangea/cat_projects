<div class='container px-5 px-sm-0'>
    <div class='row'>
        
        <div class="col-md-3">
            <%= render 'info', customer: @customer %>
            
            <%= link_to new_customer_cat_coffee_shop_path, class: "btn btn-warning btn-lg center-block mt-2 mb-2" do %>
            保護猫カフェ情報を共有する！
            <% end %>
        </div>
        
        <div class='col-md-8 offset-md-1'>
            <!--会員さんが投稿した保護猫カフェ投稿の一覧-->
            <h2>
                <%= @customer.customer_name %>
                さんの
                保護猫カフェ情報特集！
            </h2>
            <%#= render 'cat_coffee_shops/index', cat_coffee_shops: @cat_coffee_shops %>
            <table class='table table-hover table-inverse'>
                <thead>
                    <tr>
                        <th></th>
                        <th>店名/最寄り駅</th>
                        <th>タイトル</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                
                <tbody>
                    <% @cat_coffee_shops.each do |cat_coffee_shop| %>
                    <tr>
                        <td><%= image_tag cat_coffee_shop.image, size:'70x70' %></td>
                        <td><%= cat_coffee_shop.cat_coffee_shop_location %></td>
                        <td>
                            <%= link_to customer_cat_coffee_shop_path(cat_coffee_shop.id) do %>
                            <%= cat_coffee_shop.cat_coffee_shop_title %>
                            <% end %>
                        </td>
                        <td id="cat_coffee_shop_favorite_buttons_<%= cat_coffee_shop.id %>">
                          <% if cat_coffee_shop.favorited_by?(current_customer) %>
                            <p>いいニャ数：<%= cat_coffee_shop.cat_coffee_shop_favorites.count %></p>
                          <% else %>
                            <p>いいニャ数：<%= cat_coffee_shop.cat_coffee_shop_favorites.count %></p>
                          <% end %>
                        </td>
                        <td>コメント数</td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        
    </div>
</div>