<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">

      <h2>ログイン</h2>

        <%#= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= form_with model: @customer, url: customer_session_path do |f| %>
          <div class="errors">
            <%= render "customers/shared/error_messages", resource: resource %>
          </div>
          
            <div class="field">
              <%= f.label :customer_name, "お名前" %><br>
              <%= f.text_field :customer_name %>
            </div>
            
            <!--<div class="field">-->
            <!--  <%#= f.label :email, "メールアドレス" %><br />-->
            <!--  <%#= f.email_field :email, autofocus: true, autocomplete: "email" %>-->
            <!--</div>-->
            

            <div class="field">
              <%= f.label :password, "パスワード（6文字以上）" %><br />
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "ログイン", class: "btn btn-primary btn-sm center-block mt-2 mb-2" %>
            </div>
            
        <% end %>

      <%= render "customers/shared/links" %>

  
    </div>
  </div>
</div>
