<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      
      <h2>新規会員登録</h2>

        <%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= form_with model: @customer, url: customer_registration_path do |f| %>
          <%= render "customers/shared/error_messages", resource: resource %>
  
            <div class="field">
              <%= f.label :customer_name, "お名前" %><br>
              <%= f.text_field :customer_name %>
            </div>

            <div class="field">
              <%= f.label :email, "メールアドレス" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field">
              <%= f.label :password, "パスワード（6文字以上）" %>
              <% if @minimum_password_length %>
              <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>

            <div class="actions">
              <%= f.submit "新規登録", class: "btn btn-success btn-lg center-block mt-2 mb-2" %>
            </div>
            
        <% end %>

      <%#= render "customers/shared/links" %>
      <h6><%= link_to "すでに会員の方はこちら", new_customer_session_path %></h6>


    </div>
  </div>
</div>