<div class='row'>
  <div class='mx-auto'>
    <div class="serch_form">
        <%= form_with url: customer_searches_search_path, method: :get, local: true do |f| %>
          <%= f.text_field :content %>
          <%= f.select :model,options_for_select({"会員"=>"customer","保護猫カフェ投稿"=>"cat_coffee_shop"})%>
          <%= f.select :method,options_for_select({"完全一致"=>"perfect","前方一致"=>"forward","後方一致"=>"backward","部分一致"=>"partial"})%>
          <%= f.submit'検索', class: "btn btn-info btn-sm center-block" %>
        <% end%>
    </div>
  </div>
</div>