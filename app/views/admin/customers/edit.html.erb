<div class='container'>
  <h1 class="px-3 mx-auto"><%= @customer.customer_name %>さんの会員編集</h1>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    
      <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
      
        <div class="form-group">
          <%= f.label :customer_name, "会員名" %>
          <%= f.text_field :customer_name, class: "form-control customer_name" %>
        </div>
      
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.text_field :email, class: "form-control email" %>
        </div>
        
        <!--<div class="field text-left">-->
        <!--  <p>会員ステータス</p>-->
        <!--  <label><%#= f.radio_button :is_deleted, "有効" ,checked: "checked"%> 有効 </label>-->
        <!--  <label><%#= f.radio_button :is_deleted, "利用停止" %> 利用停止</label>-->
        <!--</div>-->
        
        <div class="actions">
          <%= f.submit "変更を保存", class: "btn btn-secondary btn-lg center-block mt-2 mb-2" %>
        </div>
      
      <% end %>
      
    </div>
  </div>
</div>