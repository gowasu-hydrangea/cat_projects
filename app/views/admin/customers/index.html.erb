<div class='container'>
    <div class='row'>
        <h1 class="px-3 mx-auto">会員 一覧</h1>
            <table class='table table-hover table-inverse'>
              <thead>
                <tr>
                  <th>会員id</th>
                  <th>会員名</th>
                  <th>フォロー数</th>
                  <th>フォロワー数</th>
                  <th>ステータス</th>
                </tr>
              </thead>
              
              <% @customers.each do |customer| %>
              <tbody>
                <tr>
                  <td><%= customer.id %></td>
                  
                  <td>
                    <%= link_to admin_customer_path(customer.id) do %>
                    <%= customer.customer_name %>
                    <% end %>
                  </td>
                  
                  <td><%= customer.followings.count %></td>
                  
                  <td><%= customer.followers.count %></td>
                  
                  <td><%= customer.is_deleted %></td>
                </tr>
              </tbody>
              <% end %>
            </table>
            <%= paginate @customers %>
    </div>
</div>